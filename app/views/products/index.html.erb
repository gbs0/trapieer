<div class="container">
  <h6>Home / Categorias / <strong> <%= @category.capitalize%> </strong></h6>
  <div class="row">
  <div class="row">
    <% @products.each do |product| %>
      <% if product.image.present?  %>
      <%   x = product.image %>
      <% else %>
      <%   x = 'ngfqmiujsrwlhlmvu66l'  %>
      <% end %>
      <div class="col-xs-12 col-sm-6 col-md-3 card-product animated fadeInLeft">
        <!-- <div class="card" id="anchor" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path x %> ) ;"> -->
        <div class="card" id="anchor" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= product.image %>);">
          <div class="card-description">
            <h2><%= product.name.capitalize %></h2>
          </div>
          <%= link_to "", product_path(product.id), class: 'card-link' %>
        </div>
        <div class="card-params">
          <div class="product-details">
            <h5>Origem: <%= product.origin.capitalize %></h5>
            <h5>Tipo: <em><%= product.category.capitalize %></em></h5>
            <h5>Preço/Kg: $<strong><%= product.price %>,<%= rand(10..31) %></strong></h5>
            <h5>Anunciado há: <strong><%= rand(10..31) %><strong> dias</h5>
          </div>
          <div class="stars">
            <% rand(1...5).times do %>
              <i class="fas fa-star"></i>
            <% end %>
          </div>
          <div class="product-btn"><%= link_to "Ver Mais", product_path(product.id), class: 'btn btn-primary card-btn animated'%></div>
        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>


