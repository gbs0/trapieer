<div class="container">
  <div class="row">
  <div class="row">
    <% @products.each do |product| %>


      <% if product.image.present?  %>
      <%   x = product.image %>
      <% else %>
      <%   x = 'ngfqmiujsrwlhlmvu66l'  %>
      <% end %>

      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card" id="anchor" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path x %> ) ;">
          <div class="card-description">
            <h2><%= product.name.capitalize %></h2>
            <h5><%= product.origin.capitalize %></h5>
          </div>
          <%= link_to "", product_path(product.id), class: 'card-link' %>
        </div>
          <h4>Tipo: <%= product.category.capitalize %></h4>
          <h4>Pre√ßo/Kg: $<%= product.price %></h4>
          <%= link_to "Ver Mais", product_path(product.id), class: 'btn btn-primary'%>
      </div>
    <% end %>
  </div>
  </div>
</div>


