<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">

    <%if @product.image.present? %>
      <%= cl_image_tag( @product.image,                 width: 300, height: 300, crop: :fill) %>
      <%else%>
      <%= cl_image_tag('ngfqmiujsrwlhlmvu66l',          width: 300, height: 300, crop: :fill) %>
      <%end%>
    </div>


  <div class="col-xs-12 col-sm-6">
    <div class="product-components">
      <h2><%=@product.name.capitalize%></h2>
      <p><%=@product.origin.capitalize%></p>
      <p><%=@product.description%></p>
      <p>Quantidade: <%=@product.quantity%></p>
      <p>R$ <%=@product.price%></p>
      <p><%= link_to 'Comprar', new_user_registration_path, class: "btn-treehouse" %></p>
      <p><%= link_to 'Back', products_path, class: "btn btn-danger" %></p>
    </div>
  </div>
  </div>
</div>



